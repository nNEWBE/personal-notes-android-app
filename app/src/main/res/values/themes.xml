<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PersonalNoteApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.PersonalNoteApp" parent="Base.Theme.PersonalNoteApp" />

    <style name="Theme.PersonalNoteApp.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="Theme.PersonalNoteApp.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="Theme.PersonalNoteApp.FullScreen" parent="Theme.PersonalNoteApp">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MaterialAlertDialog.Rounded" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearance">@style/ShapeAppearance.App.Dialog.Rounded</item>
    </style>

    <style name="ShapeAppearance.App.Dialog.Rounded" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">160dp</item>
    </style>

    <style name="App.Dialog.Button" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/bangers</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/teal_200</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="App.Dialog.Custom" parent="MaterialAlertDialog.Rounded">
        <item name="android:background">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/App.Dialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/App.Dialog.Button</item>
    </style>
</resources>
